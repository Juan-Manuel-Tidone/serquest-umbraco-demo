@inherits Umbraco.Web.Mvc.UmbracoViewPage<IEnumerable<IPublishedContent>>

<div class="site-section">
    <div class="container">
        <div class="row align-items-stretch">
            @foreach (var item in Model)
            {
                var explore = (ExploreRendering)item;
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="unit-4 d-flex">
                        <div class="unit-4-icon mr-4">
                            <span>
                                <img style="border-radius: 50%; max-width: 50px" src="@explore.ExploreIcon.Url" />
                            </span>
                        </div>
                        <div>
                            <h3>@explore.ExploreHeading</h3>
                            <p>@explore.ExploreContent</p>
                            @foreach (var link in explore.ExploreCta)
                            {
                                <p class="mb-0"><a href="@link.Url">@link.Name</a></p>
                            }
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

